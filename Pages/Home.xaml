<Page x:Class="EquiLog.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:EquiLog.Pages"
      mc:Ignorable="d"
      Title="Home">
    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid>
            <Grid>
                <TextBlock Text="Le logiciel qui va vous être présenté est une version alpha. &#x0a; Il peut donc y avoir des bugs ou des erreurs" FontSize="15" Foreground="IndianRed" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            </Grid>
            <TextBlock Text="Dashboard" FontSize="30" Foreground="{DynamicResource PrimaryTextColor}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Page>
