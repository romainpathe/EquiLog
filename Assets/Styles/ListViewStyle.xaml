<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type ListView}">
        <Setter Property="BorderThickness" Value="0"></Setter>
        <Setter Property="Background" Value="{DynamicResource SecundaryBackgroundColor}"></Setter>
    </Style>
        
    <Style TargetType="{x:Type GridViewColumnHeader}">
        <Setter Property="Background" Value="{DynamicResource TertiaryBackgroundColor}"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"></Setter>
        <Setter Property="BorderBrush" Value="{DynamicResource TertiaryBackgroundColor}"></Setter>
        <Setter Property="Height" Value="30"></Setter>
        <Setter Property="MinWidth" Value="80"></Setter>
        <Setter Property="IsHitTestVisible" Value="False"></Setter>

    </Style>
    <Style TargetType="{x:Type ListViewItem}">
        <Setter Property="Background" Value="{DynamicResource SecundaryBackgroundColor}"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource TextSecundaryColor}"></Setter>
        <Setter Property="BorderBrush" Value="{DynamicResource TertiaryBackgroundColor}"></Setter>
    </Style>
    
    
</ResourceDictionary>